<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %> 
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<%- include('./partials/headerDeslogueado')  %> 
	<!-- product detail -->
	 
	<% for (let i = 0; i < 1; i++) { %>
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=productos[i].nombre  %></h2>
			<p class="product-detail-description">
				<a href="/product/product-add">Editar</a>
			</p>
			
		</div>
		
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=productos[i].imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%=productos[i].descripcion  %>
						</p>
				</article>

				<% } %>
				<div class="col-12 col-lg-4">

				<% for (let i = 0; i < comments.length ; i++) { %>
					<section class="comments">
					<a href="./profile.ejs">
						<article > 
							<img src= <%= comments[i].fotoDePerfil %>  alt="">
							<div class="data"> 
								<p class="user">
								<strong><%= comments[i].nombre %> </a> </strong>
							<%= comments[i].texto %> </p>
							</div>
						</article>
						<% } %>
					</a>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->

</body>	
</html>