<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')  %> 
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<%- include('./partials/headerLogueado')  %> 
	<!-- product detail -->
	 

	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=productos.titulo  %></h2>
			<p class="product-detail-description">
				<a href="/product/product-edit/<%= productos.id  %> ">Editar</a>
			</p>
			
		</div>
		
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/product/<%=productos.foto %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%=productos.descripcion %>
						</p>
				</article>
				<section class="comments">
					<% for (let i = 0; i < productos.comentarios; i++) { %>
						<article>
							<img src= "/images/users/<%=productos.comentarios[i].usuario.foto%>" alt="img perfil">
							<div class="data">
								<p class="user">
								<strong> <a href="/profile/<%=productos.comentarios[i].user.id%>"> <%=productos.comentarios[i].usuario.nombre%> <%=productos.comentarios[i].usuario.apellido%> </a> </strong>
									<%= productos.comentarios[i].comentarios %> 
								</p>
							</div>
						</article>
						<% } %>
				</section>
		
			<div class="col-12 col-lg-4">
				
					
			
					<form class="form" action="/product/id/<%=productos.id%>"  method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->

</body>	
</html>