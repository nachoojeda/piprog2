<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')  %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %> 
<% } else{%>
		<%- include('./partials/headerDeslogueado')  %> 
<% } %>

	<!-- /Header -->

	<!-- Banner -->
	<div class="banner">
		<img src="" alt="">
	</div>


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>


			<!-- Show the "ultimos" products -->


			<% for (let i = 0; i < productos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%=productos[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productos[i].foto %>" alt="imagen de">
						</figure>
						<article class="product-box_data">
							<h2> <%= productos[i].titulo  %> </h2>
							<p><%=productos[i].descripcion %> </p> 
							<p><%=productos[i].user%> </p> 
							<a href="/product/product-edit/<%=productos[i].id%>">Modificar |</a>
							
							<a href="/product/product-delete/<%=productos[i].id%>">| Eliminar</a>
						</article>
					</a>
				</section>
			</div>
			<% } %>

		
			<!-- footer -->
			<%- include('./partials/footer')  %>
			<!-- /footer -->
</body>

</html>